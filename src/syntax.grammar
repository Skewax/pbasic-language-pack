@top Program { stmt* }

@skip { space | comment | newline }

stmt { Debug | expr }
Debug { KW<"debug"> expr }

expr { Identifier | String }

KW<name> { @specialize<Identifier, name> }

@tokens {
  Identifier { $[a-zA-Z_] $[a-zA-Z_0-9]* }

  Number { -?$[0-9] }
  String { '"' (!["\\] | "\\" _)* '"' }

  comment { "'" ![\n]* }
  space { $[ \t]+ }
  newline { $[\n\r]+ }

  ","
}
